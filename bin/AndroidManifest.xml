<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nubia.gameforparty"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="14" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <!-- <uses-permission android:name="android.permission.READ_CONTACTS"/> -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/app"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name="com.nubia.gameforparty.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nubia.gameforparty.GameHallActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity android:name="com.nubia.game.RandomNumberGame" />
        <activity android:name="com.nubia.gameforparty.HostActivity" />
        <activity
            android:name="com.nubia.zhuli.DiceCastActivity"
            android:icon="@drawable/logo"
            android:label="@string/dices"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.nubia.zhangbing.StupidActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.StupidActivity" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nubia.zhangbing.ChooseActionActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.ChooseActionActivity" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nubia.zhangbing.ChooseMethodActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.ChooseMethodActivity" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nubia.zhangbing.GameIntroActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.GameIntroActivity" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nubia.lijia.Welcome"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.nubia.lijia.GreatAdventureActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.nubia.lijia.WheelViewTimeActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.nubia.lijia.QueryTerms"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="com.nubia.shuangqiang.WhoDrinkActivity" />
    </application>

   

</manifest>